---
import "../styles/global.css";
import AddRigForm from "../components/AddRigForm";
import RigList from "../components/RigList";
---

<html lang="en">
  <head>
    <title>Oil Rig Dashboard</title>
  </head>
  <body class="bg-gray-100 min-h-screen p-6">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-3xl font-bold mb-6 text-center">Oil Rig Dashboard</h1>

      <!-- Form at the top -->
      <div class="mb-8">
        <AddRigForm client:load />
      </div>

      <!-- Rig list grid -->
      <RigList client:load />
    </div>
  </body>
</html>
